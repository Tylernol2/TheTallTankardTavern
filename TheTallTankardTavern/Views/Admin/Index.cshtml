@addTagHelper *, TheTallTankardTavern
@using static TheTallTankardTavern.Configuration.ApplicationSettings

<style>
    #reload-operations a {
        font-weight: bold;
    }
    .table td {
        border: none;
    }
</style>

<div><em>@ViewData["Message"]</em></div>
<div id="reload-operations">
    <buttonlink asp-action="ReloadConfigsAndData" text="Reload Configuration and Data files"></buttonlink>
</div>
<br />
<div class="row" id="reset-character-items">
    <div class="col-md-6">
        <strong>Unequip Equipment</strong>
        <form asp-action="UnequipAllItems" method="post">
            <table>
                <tr>
                    <td><select name="cid" asp-items="CharacterDataContext.GetDataContextSelectList()"></select></td>
                    <td><submit text="Confirm"></submit></td>
                </tr>
            </table>
        </form>
        <br />
        <strong>Remove all items</strong>
        <form asp-action="RemoveAllItems" method="post">
            <table>
                <tr>
                    <td><select name="cid" asp-items="CharacterDataContext.GetDataContextSelectList()"></select></td>
                    <td><submit text="Confirm"></submit></td>
                </tr>
            </table>
        </form>
    </div>
</div>