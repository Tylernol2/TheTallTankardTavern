            </table>
        </div>
        <div class="col-md-3" id="item-damage-types">
            <table>
                <thead>
                    <tr>
                        <th>Damage / Resistance Types</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < ModelListHelper.AllValues<DAMAGE_TYPE>().Length; i++)
                    {
                        <tr>
                            <td><label>@(ModelListHelper.AllValues<DAMAGE_TYPE>()[i].EnumToString())</label></td>
                            <td><input type="checkbox" asp-for="@Model.Damage_Types[i]" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row col-md-12">
        <label asp-for="Desc"></label>
        <textarea asp-for="Desc" style="width:100%" rows="5"></textarea>
    </div>
