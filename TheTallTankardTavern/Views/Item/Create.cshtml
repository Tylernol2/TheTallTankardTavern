@model TheTallTankardTavern.Models.ItemModel
@using TTT.Enumerator
@using static TheTallTankardTavern.Configuration.Constants
@addTagHelper *, TheTallTankardTavern
@{
    ViewData["Title"] = Model.Name;
}

<form asp-action="Save" method="post">
    <hidden asp-for="ID"></hidden>
    <partial name="/Views/Shared/Custom/ActionButtons/_BackSavePartial.cshtml" />
    <div class="row">
        <div class="col-md-4" id="item-properties">
            <table>
                <thead>
                    <tr>
                        <th style="width:100px">Properties</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><label asp-for="Name"></label></td>
                        <td><textbox asp-for="Name"></textbox></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Item_Type"></label></td>
                        <td><select asp-for="Item_Type" asp-items="SelectListHelper.GetItemTypesSelectList()"></select></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Material_ID"></label></td>
                        <td><select asp-for="Material_ID" asp-items="SelectListHelper.GetMaterialsForItemsSelectList()"></select></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Damage_Die"></label></td>
                        <td><select asp-for="Damage_Die" asp-items="SelectListHelper.GetDamageDieSelectList()"></select></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Units_To_Craft"></label></td>
                        <td><numberbox asp-for="Units_To_Craft" min="1"></numberbox></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Weight_Class"></label></td>
                        <td><select asp-for="Weight_Class" asp-items="SelectListHelper.GetWeaponWeightClassSelectList()"></select></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Attack"></label></td>
                        <td>@Model.Attack</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Damage"></label></td>
                        <td>@Model.Damage</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Armour_Class"></label></td>
                        <td>@Model.Armour_Class</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Enchantment_Slots"></label></td>
                        <td>@Model.Enchantment_Slots</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Value"></label></td>
                        <td>@Model.Value.FormatMoney() gp</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-5" id="item-weapon-traits">
            <table>
                <thead>
                    <tr>
                        <th>Traits</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < ModelListHelper.AllValues<WEAPON_TRAIT>().Length; i++)
                    {
                        <tr>
                            <td><label>@(ModelListHelper.AllValues<WEAPON_TRAIT>()[i].EnumToString())</label></td>
                            <td><input type="checkbox" asp-for="@Model.Traits[i]" /></td>
                            <td>
                                @switch (ModelListHelper.AllValues<WEAPON_TRAIT>()[i])
                                {
                                    case WEAPON_TRAIT.Defensive:<numberbox asp-for="Defensive_Value" min="0"></numberbox> break;
                                    case WEAPON_TRAIT.Ranged: <textbox asp-for="Ranged_Value"></textbox> break;
                                    case WEAPON_TRAIT.Reach: <textbox asp-for="Reach_Value"></textbox> break;
                                    case WEAPON_TRAIT.Thrown: <textbox asp-for="Thrown_Value"></textbox> break;
                                    case WEAPON_TRAIT.Versitile: <select asp-for="Versitile_Value" asp-items="SelectListHelper.GetDamageDieSelectList()"></select>break;
                                    default: break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
