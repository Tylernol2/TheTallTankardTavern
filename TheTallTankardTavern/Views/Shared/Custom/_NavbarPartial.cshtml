@using TheTallTankardTavern.Configuration
@if (ContextUser.IsAuthenticated)
{
    <partial name="/Views/Shared/Custom/_Navbar/_NavbarUserLogin.cshtml" />
    <partial name="/Views/Shared/Custom/_Navbar/_NavbarAppendix.cshtml" />
    @if (ContextUser.IsAdministrator)
    {
        <partial name="/Views/Shared/Custom/_Navbar/_NavbarAdministrator.cshtml" />
    }
    @if (ContextUser.IsAdminOrDM)
    {
        <partial name="/Views/Shared/Custom/_Navbar/_NavbarDungeonMaster.cshtml" />
    }
    <partial name="/Views/Shared/Custom/_Navbar/_NavbarPlayer.cshtml" />
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index">Log in</a></li>
    </ul>
}
