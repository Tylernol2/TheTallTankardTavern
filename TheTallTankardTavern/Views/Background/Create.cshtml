@model TheTallTankardTavern.Models.BackgroundModel
@addTagHelper *, TheTallTankardTavern
@{
    ViewData["Title"] = Model.Name;
}

<form asp-action="Save" method="post">
    <hidden asp-for="ID"></hidden>
    <partial name="/Views/Shared/Custom/ActionButtons/_BackSavePartial.cshtml" />
    <table>
        <thead>
            <tr>
                <th style="width:200px"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><label asp-for="Name"></label></td>
                <td><textbox asp-for="Name"></textbox></td>
            </tr>
            <tr>
                <td><label asp-for="Skill_Proficiencies"></label></td>
                <td><textbox asp-for="Skill_Proficiencies"></textbox></td>
            </tr>
            <tr>
                <td><label asp-for="Tool_Proficiencies"></label></td>
                <td><textbox asp-for="Tool_Proficiencies"></textbox></td>
            </tr>
            <tr>
                <td><label asp-for="Languages"></label></td>
                <td><textbox asp-for="Languages"></textbox></td>
            </tr>
            <tr>
                <td><label asp-for="FeatureID"></label></td>
                <td><select asp-for="FeatureID" asp-items="SelectListHelper.GetFeaturesForBackgroundsSelectList()"></select></td>
            </tr>
            <tr>
                <td><label asp-for="Desc"></label></td>
                <td><textarea asp-for="Desc" style="width:100%" rows="10"></textarea></td>
            </tr>
            <tr>
                <td><label asp-for="Equipment"></label></td>
                <td><textarea asp-for="Equipment" style="width:100%" rows="10"></textarea></td>
            </tr>
            <tr>
                <td><label asp-for="IsHomebrew"></label></td>
                <td><input type="checkbox" asp-for="IsHomebrew" /></td>
            </tr>
            <tr>
                <td><label asp-for="IsHidden"></label></td>
                <td><input type="checkbox" asp-for="IsHidden" /></td>
            </tr>
        </tbody>
    </table>
</form>

