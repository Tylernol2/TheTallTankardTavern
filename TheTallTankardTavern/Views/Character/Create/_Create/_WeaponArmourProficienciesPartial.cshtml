                            <td><input type="checkbox" asp-for="WeaponArmourProficiencies[prof]" /></td>
                            <td><label>@prof</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <table id="martial-melee-weapons">
                <thead>
                    <tr>
                        <th colspan="2">Martial Melee Weapons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string prof in Model.WeaponArmourProficiencies.MartialMeleeWeaponKeys)
                    {
                        <tr>
                            <td><input type="checkbox" asp-for="WeaponArmourProficiencies[prof]" /></td>
                            <td><label>@prof</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <table id="simple-ranged-weapons">
                <thead>
                    <tr>
                        <th colspan="2">Simple Ranged Weapons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string prof in Model.WeaponArmourProficiencies.SimpleRangedWeaponKeys)
                    {
                        <tr>
                            <td><input type="checkbox" asp-for="WeaponArmourProficiencies[prof]" /></td>
                            <td><label>@prof</label></td>
                        </tr>
                    }
                </tbody>
            </table>
            <table id="martial-ranged-weapons">
                <thead>
                    <tr>
                        <th colspan="2">Martial Ranged Weapons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string prof in Model.WeaponArmourProficiencies.MartialRangedWeaponKeys)
                    {
                        <tr>
                            <td><input type="checkbox" asp-for="WeaponArmourProficiencies[prof]" /></td>
