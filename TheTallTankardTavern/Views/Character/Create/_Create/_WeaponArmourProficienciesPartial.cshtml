@model TheTallTankardTavern.Models.CharacterModel
@addTagHelper *, TheTallTankardTavern

<div id="character-weapon-armour-proficiencies">
    <strong><label asp-for="WeaponArmourProficiencies"></label></strong>
    <div class="row">
        <div class="col-md-4">
            <table id="shield-and-armour">
                <thead>
                    <tr>
                        <th colspan="2">Shield &amp; Armour</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string prof in Model.WeaponArmourProficiencies.ShieldAndArmourKeys)
                    {
                        <tr>
                            <td><input type="checkbox" asp-for="WeaponArmourProficiencies[prof]" /></td>
                            <td><label>@prof</label></td>
                        </tr>
                    }
                </tbody>
            </table>
            <table id="simple-melee-weapons">
                <thead>
                    <tr>
                        <th colspan="2">Simple Melee Weapons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string prof in Model.WeaponArmourProficiencies.SimpleMeleeWeaponKeys)
                    {
