@model TheTallTankardTavern.Models.CharacterModel
@using TheTallTankardTavern.Helpers
@using static TheTallTankardTavern.Configuration.Constants
@addTagHelper *, TheTallTankardTavern

<style>
    #character-scores th,
    #character-scores td {
        text-align: center;
    }
</style>

<table id="character-scores">
    <thead>
        <tr>
            <th></th>
            <th width="150px">Score</th>
            <th>Mod</th>
            <th>Save</th>
            <th>Save Proficiency</th>
            <th>DC</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>STR</strong></td>
            <td><numberbox asp-for="Strength.Score" min="0" max="@(Model.Level <= 20 ? 20 : 30)"></numberbox></td>
            <td>@Model.Strength.Modifier</td>
            <td>@Model.GetSaveProficiency(SKILL_CATEGORY.Strength, Model.Strength_Save)</td>
            <td><select asp-for="Strength_Save" asp-items="SelectListHelper.GetSaveProficiencySelectList()"></select></td>
            <td>@(Model.Proficiency_Bonus + Model.Strength.Modifier + 8)</td>
        </tr>
        <tr>
            <td><strong>DEX</strong></td>
            <td><numberbox asp-for="Dexterity.Score" min="0" max="@(Model.Level <= 20 ? 20 : 30)"></numberbox></td>
