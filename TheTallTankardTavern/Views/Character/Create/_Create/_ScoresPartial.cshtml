            <td><select asp-for="Constitution_Save" asp-items="SelectListHelper.GetSaveProficiencySelectList()"></select></td>
            <td>@(Model.Proficiency_Bonus + Model.Constitution.Modifier + 8)</td>
        </tr>
        <tr>
            <td><strong>INT</strong></td>
