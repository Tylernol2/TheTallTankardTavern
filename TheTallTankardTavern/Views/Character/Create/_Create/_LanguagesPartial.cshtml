@model TheTallTankardTavern.Models.CharacterModel
@using TTT.Enumerator
@using static TheTallTankardTavern.Configuration.Constants
@addTagHelper *, TheTallTankardTavern

<style>
    #character-other-stats label {
        font-weight: bold;
    }
</style>

<table id="character-languages">
    <thead>
        <tr>
            <th colspan="2">Languages</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ModelListHelper.AllValues<LANGUAGES>().Length; i++)
        {
            <tr>
                <td><input type="checkbox" asp-for="@Model.Languages[i]" /></td>
                <td><label>@(ModelListHelper.AllValues<LANGUAGES>()[i].EnumToString())</label></td>
            </tr>
        }
    </tbody>
</table>