@model TheTallTankardTavern.Models.CharacterModel
@addTagHelper *, TheTallTankardTavern

<style>
    .tab-content * {
        font-size: 14px;
    }
    #character-items input[type=button] {
        font-weight: bold;
    }
</style>

<div class="nav nav-tabs">
    <a id="character-stats-and-info-tab" class="nav-item nav-link active" data-toggle="tab" href="#character-stats-and-info"><strong>Stats &amp; Info</strong></a>
    <a id="character-items-tab" class="nav-item nav-link" data-toggle="tab" href="#character-items"><strong>Items</strong></a>
    <a id="character-spells-tab" class="nav-item nav-link" data-toggle="tab" href="#character-spells"><strong>Spells</strong></a>
    <a id="character-features-tab" class="nav-item nav-link" data-toggle="tab" href="#character-features"><strong>Features</strong></a>
    <a id="character-background-tab" class="nav-item nav-link" data-toggle="tab" href="#character-background"><strong>Background &amp; Bio</strong></a>
    <a id="character-notes-tab" class="nav-item nav-link" data-toggle="tab" href="#character-notes"><strong>Notes</strong></a>
</div>
<br />
<div class="tab-content">
    <div id="character-stats-and-info" class="tab-pane active">
        <partial name="/Views/Character/Details/_StatsAndInfoPartial.cshtml" model="Model" />
    </div>
    <div id="character-items" class="tab-pane">
        <partial name="/Views/Character/Details/_ItemsPartial.cshtml" model="Model" />
    </div>
    <div id="character-spells" class="tab-pane">
        <partial name="/Views/Character/Details/_SpellsPartial.cshtml" model="Model" />
    </div>
    <div id="character-features" class="tab-pane">
        <partial name="/Views/Character/Details/_FeaturesPartial.cshtml" model="Model" />
    </div>
    <div id="character-background" class="tab-pane">
        <partial name="/Views/Character/Details/_BackgroundsPartial.cshtml" model="Model" />
    </div>
    <div id="character-notes" class="tab-pane">
        <partial name="/Views/Character/Details/_NotesPartial.cshtml" model="Model" />
    </div>
</div>



