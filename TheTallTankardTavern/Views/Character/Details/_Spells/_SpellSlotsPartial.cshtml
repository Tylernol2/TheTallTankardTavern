@model TheTallTankardTavern.Models.CharacterModel
@addTagHelper *, TheTallTankardTavern

<div>SPELL SLOTS</div>
<table id="character-spells-slots">
    <thead>
        <tr>
            <th>Level</th>
            <th colspan="2">Slots</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.SpellSlots.Length; i++)
        {
            <tr>
                <td><label>@(i + 1)</label></td>
                <td><numberbox asp-for="SpellSlots[i]" min="0" max="Model.SpellSlotsMax[i]" 
                               onchange="quickSaveSpellSlots('@Model.ID', '@(i + 1)', this)"></numberbox></td>
                <td>/ @Model.SpellSlotsMax[i]</td>
            </tr>
        }
    </tbody>
</table>