@model TheTallTankardTavern.Models.CharacterModel
@addTagHelper *, TheTallTankardTavern

<style>
    .card#unarmed-strike {
        margin-top: 10px;
    }
    .card#unarmed-strike .card-title {
        margin: 0px;
    }
    .card#unarmed-strike .card-text {
        margin-top: 5px;
    }
</style>
<div class="card stat-card" id="unarmed-strike">
    <div class="card-body">
        <div class="stat-card-label">UNARMED STRIKE</div>
        <div class="stat-card-content">+@Model.UnarmedStrikeAttack() to attack</div>
        <div class="stat-card-content">@Model.UnarmedStrikeDamageString() damage</div>
    </div>
</div>