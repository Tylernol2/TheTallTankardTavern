@model TheTallTankardTavern.Models.CharacterModel
@using TheTallTankardTavern.Helpers
@using static TheTallTankardTavern.Configuration.ApplicationSettings
@using static TheTallTankardTavern.Configuration.Constants.ITEM_TYPES
@using TTT.String
@addTagHelper *, TheTallTankardTavern

<style>
    #equipped-armour-and-weapons-header p {
        margin: 0px;
        padding: 0px;
    }
</style>

<div id="equipped-armour-and-weapons-header">
    <div class="row">
        <div class="col-md-6">
            <p>EQUIPPED ARMOUR &amp; WEAPONS [Weapon Slots: @Model.Equipment.Weapon_Slots_Used / @Model.Equipment.Weapon_Slots_Max]</p>
        </div>
        <div class="col-md-6">
            <p>Weapon Slots Per Weapon Size: 3 - Large, 2 - Medium, 1 - Small</p>
            <p><em>See the <a href="~/Appendix/Homebrews">Homebrews</a> page for help with weapon traits</em></p>
        </div>
    </div>
</div>
<table id="character-items-equipped-armour-and-weapons" table-hover="true">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Attack</th>
            <th>Damage</th>
            <th>AC</th>
            <th>Weight</th>
            <th>Damage/Resistance Type</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (string iid in Model.Equipment.Where(i => ItemDataContext.GetModelFromID(i).Item_Type.EqualsAny(ARMOUR, WEAPON))
           .OrderBy(i => ItemDataContext.GetModelFromID(i).Name))
        {
            ItemModel Item = ItemDataContext.GetModelFromID(iid);
            <tr data-toggle="modal" data-target="#popup-modal" data-title="@Item.Name" data-desc="@Item.Desc" data-traits="@Item.Weapon_Trait_Desc">
                <td>@Item.Name</td>
                <td>@Item.Type</td>
                <td>@Item.Attack</td>
                <td>@Item.Damage</td>
                <td>@Item.Armour_Class</td>
                <td>@Item.Weight_Class</td>
                <td>@Item.Damage_Types.ToString()</td>
                <td><button class="td-action-btn" value="Unequip" onclick="unequipItem('@Model.ID', '@Item.ID')"></button></td>
                <td><button class="td-action-btn" value="Remove" onclick="removeItemFromEquipment('@Model.ID', '@Item.ID')"></button></td>
            </tr>
        }
    </tbody>
</table>