@using TTT.Items
@model TheTallTankardTavern.Models.CharacterModel
@addTagHelper *, TheTallTankardTavern

<br />
<strong>Attuned Items (Max @Model.Proficiency_Bonus)</strong>
<table table-hover="true">
    <tbody>
        @if (Model.Equipment.AttunedItems.Any())
        {
            foreach (string ai in Model.Equipment.AttunedItems)
            {
                ItemModel AttunedItem = ItemDataContext.GetModelFromInventoryID(ai);
                <tr data-toggle="modal" data-target="#popup-modal" data-title="@AttunedItem.Name" data-desc="@AttunedItem.PopUpText" data-traits="">
                    <td class="@(AttunedItem.IsMagic ? "item-magic" : "")">@AttunedItem.Name</td>
                    <td>(@AttunedItem.Weight lbs)</td>
                    <td><button class="td-action-btn" value="Unequip" onclick="unequipAttunableItem('@Model.ID', '@AttunedItem.InventoryID')"></button></td>
                </tr> 

            }
        }
    </tbody>
</table>