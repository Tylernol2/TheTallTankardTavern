@model TheTallTankardTavern.Models.MaterialModel
@addTagHelper *, TheTallTankardTavern
@{
    ViewData["Title"] = Model.Name;
}

<form asp-action="Save" method="post">
    <hidden asp-for="ID"></hidden>
    <partial name="/Views/Shared/Custom/ActionButtons/_BackSavePartial.cshtml" />
    <table>
        <thead>
            <tr>
                <th style="width:200px"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><label asp-for="Name"></label></td>
                <td><textbox asp-for="Name"></textbox></td>
            </tr>
            <tr>
                <td><label asp-for="Attack"></label></td>
                <td><numberbox asp-for="Attack" min="0"></numberbox></td>
            </tr>
            <tr>
                <td><label asp-for="Damage"></label></td>
                <td><numberbox asp-for="Damage" min="0"></numberbox></td>
            </tr>
            <tr>
                <td><label asp-for="Armour_Class"></label></td>
                <td><numberbox asp-for="Armour_Class" min="0"></numberbox></td>
            </tr>
            <tr>
                <td><label asp-for="Enchantment_Slots"></label></td>
                <td><numberbox asp-for="Enchantment_Slots" min="0"></numberbox></td>
            </tr>
            <tr>
                <td><label asp-for="Weight_Class"></label></td>
                <td><select asp-for="Weight_Class" asp-items="SelectListHelper.GetWeaponWeightClassSelectList()"></select></td>
            </tr>
        </tbody>
    </table>
</form>

